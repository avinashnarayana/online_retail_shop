<p id="notice"><%= notice %></p>

<h1>Transfers</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>From location</th>
      <th>To location</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <td><%= transfer.user %></td>
        <td><%= transfer.from_location %></td>
        <td><%= transfer.to_location %></td>
        <td><%= transfer.product %></td>
        <td><%= transfer.quantity %></td>
        <td><%= transfer.details %></td>
        <td><%= link_to 'Show', transfer %></td>
        <td><%= link_to 'Edit', edit_transfer_path(transfer) %></td>
        <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transfer', new_transfer_path %>
